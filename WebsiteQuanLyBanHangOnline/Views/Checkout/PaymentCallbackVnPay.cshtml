﻿@using WebsiteQuanLyBanHangOnline.Models.VnPay
@model VNPayInformationModel

@{
    ViewData["Title"] = "Thanh Toán Thành Công Bằng VnPay";
}

<div class="container">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Mã Giao Dịch</th>
                <th scope="col">Nội Dung Giao Dịch</th>
                <th scope="col">Số Tiền Giao Dịch</th>
                <th scope="col">Ngày Giao Dịch</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.OrderId</td>
                <td>@Model.OrderInfo</td>
                <td>@Model.Amount.ToString("#,##0 VNĐ")</td>
                <td>@Model.CreatedDate.ToString()</td>
            </tr>
        </tbody>
    </table>
</div>