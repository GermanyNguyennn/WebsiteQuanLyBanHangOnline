@model UserModel
@{
	ViewData["Title"] = "Register";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">			
			<div class="col-sm-6 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Đăng Ký Tài Khoản</h2>
					<form asp-controller="Account", asp-action="Add">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label>Tài Khoản:</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Mật Khẩu:</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Họ Và Tên:</label>
							<input asp-for="FullName" class="form-control" />
							<span asp-validation-for="FullName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Email:</label>
							<input asp-for="Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Số Điện Thoại:</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>

						<p><button type="submit" class="btn btn-primary">Đăng Ký</button></p>
						<p>Đã Có Tài Khoản ? <a asp-controller="Account" asp-action="Login">Ấn Vào Đây Để Đăng Nhập</a>.</p>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
