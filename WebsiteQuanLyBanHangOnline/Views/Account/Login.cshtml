@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login To Your Account</h2>
					<form asp-controller="Account", asp-action="Login">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label>UserName</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
							
						</div>

						<button class="btn btn-primary">Login</button><br />
						<p>Forgot Account? <a asp-controller="Account" asp-action="ForgotPassword">Click Here Recover Password</a>.</p>
						<p>Don't Have An Account? <a asp-controller="Account" asp-action="Add">Click Here To Sign Up</a>.</p>

					</form>
				</div><!--/login form-->
			</div>			
		</div>
	</div>
</section><!--/form-->

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
