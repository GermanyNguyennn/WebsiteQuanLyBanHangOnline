@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Đăng Nhập Tài Khoản</h2>
					<form asp-controller="Account", asp-action="Login">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label>Tài Khoản:</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />

						</div>
						<div class="form-group">
							<label>Mật Khẩu:</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />							
						</div>

						<button type="submit" class="btn btn-primary">Đăng Nhập</button><br />
						<p>Quên Mật Khẩu ? <a asp-controller="Account" asp-action="ForgotPassword">Ấn Vào Đây Để Lấy Lại Mật Khẩu</a>.</p>
						<p>Không Có Tài Khoản ? <a asp-controller="Account" asp-action="Add">Ấn Vào Đây Để Đăng Ký Tài Khoản</a>.</p>

					</form>
				</div><!--/login form-->
			</div>			
		</div>
	</div>
</section><!--/form-->

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
