@using WebsiteQuanLyBanHangOnline.Repository
@model Paginate

@if (Model.TotalPages > 0)
{
    <ul class="pagination justify-content-end">

        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index"
                    asp-route-page="1">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index"
                    asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        @for (var p = Model.StartPage; p <= Model.EndPage; p++)
        {
            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index"
                    asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index"
                    asp-route-page="@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
}
