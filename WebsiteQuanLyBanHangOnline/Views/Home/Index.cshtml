@model IEnumerable<ProductModel>

<div class="col-sm-3">
	<partial name="_SidebarPartial" />
</div>

<div class="col-sm-9 padding-right">
	<partial name="_FilterProductsPartial" />
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center"></h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">
						<div class="productinfo text-center">
							<a asp-controller="Product" asp-action="Detail" asp-route-Id="@item.Id">
								<img src="~/media/products/@item.Image" alt="@item.Name" />
								<h2>@item.Price.ToString("#,##0 VNĐ")</h2>
								<h5 style="height: 40px; overflow: hidden; margin: 0;">@item.Name</h5>
								@* <p>Danh Mục: @item.Category.Name</p> *@
								@* <p>Thương Hiệu: @item.Brand.Name</p> *@
							</a>
							@if (@item.Quantity > 0)
							{
								<a class="btn btn-default add-to-cart" asp-controller="Cart" asp-action="Add" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add To Cart</a>
							}
							else
							{
								<a class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sold Out</a>
							}
						</div>
					</div>
					<div class="choose">
						@if (User.Identity?.IsAuthenticated ?? false)
						{
							<ul class="nav nav-pills nav-justified">
								<li><a href="#"><i class="fa fa-plus-square add-btn-wishlist"></i>Add To Wishlist</a></li>
								<li><a href="#"><i class="fa fa-plus-square add-btn-compare"></i>Add To Compare</a></li>
							</ul>
						}
					</div>
				</div>
			</div>
		}
	</div>
	<!--features_items-->
</div>

@if (ViewBag.count > 0)
{
	@section Scripts {
	<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
	<script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
	<script>
		$(document).ready(function () {

			$("#slider-range").slider({

				range: true,
				min: @ViewBag.minprice,
				max: @ViewBag.maxprice,
				step: 100000,
				values: [@ViewBag.minprice, @ViewBag.maxprice],
				slide: function (event, ui) {

				$("#amount").val("VNĐ" + ui.values[0] + " - VNĐ" + ui.values[1]);
				}
			});
			$("#amount").val("VNĐ" + $("#slider-range").slider("values", 0) + " - VNĐ" + $("#slider-range").slider("values", 1));

			//btn lọc giá
			$('.btn-locgia').on('click', function () {

				var url = $(this).data("current_url");
				// alert(url);
				if (url) {
					window.location = url + "?startprice=" + $("#slider-range").slider("values", 0)
						+ "&endprice=" + $("#slider-range").slider("values", 1);
				}
				return false;
			});

		});
	</script>
	<script type="text/javascript">
		$(document).ready(function () {

			$('#sort_by').on('change', function () {

				var url = $(this).val();
				// alert(url);
				if (url) {
					window.location = url;
				}
				return false;
			});

		});
	</script>
	}
}