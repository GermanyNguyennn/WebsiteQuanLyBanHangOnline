@model IEnumerable<SliderModel>

@{
    ViewData["title"] = "Slider List";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}

<a asp-controller="Slider" asp-action="Add" class="btn btn-warning btn-sm">Add Slider</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Slider Name</th>
            <th scope="col">Slider Image</th>
            <th scope="col">Slider Description</th>
            <th scope="col">Slider Status</th>
            <th scope="col">Slider Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="~/media/sliders/@item.Image" width="400px" height="200px" /></td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Slider" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-warning btn-sm confirmDeletion" asp-action="Delete" asp-controller="Slider" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paging" model="@pager" />