@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Role List";
}
<a asp-controller="Role" asp-action="Add" class="btn btn-primary btn-sm">Add Role</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Role</th>
            <th scope="col">Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>
                <td></td>
                <td>
                    <a asp-controller="Role" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="Role" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-primary btn-sm confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
