@model IEnumerable<ContactModel>
@{
    ViewData["title"] = "Contact Information";
}

<a asp-controller="Contact" asp-action="Add" class="btn btn-primary btn-sm">Add Contact</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Contact Name</th>
            <th>Contact LogoImage</th>
            <th>Slider Description</th>
            <th>Slider Map</th>
            <th>Slider Email</th>
            <th>Slider Phone</th>
            <th>Slider Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="~/media/logo/@item.LogoImage" width="30%" height="30%" /></td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@Html.Raw(@item.Map)</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Contact" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Contact" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>