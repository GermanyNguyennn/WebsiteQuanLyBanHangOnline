@model IEnumerable<ContactModel>
@{
    ViewData["title"] = "Contact Information";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}

<a asp-controller="Contact" asp-action="Add" class="btn btn-warning btn-sm">Add Contact</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope ="col">Id</th>
            <th scope="col">Contact Name</th>
            <th scope="col">Contact LogoImage</th>
            <th scope="col">Contact Description</th>
            <th scope="col">Contact Map</th>
            <th scope="col">Contact Email</th>
            <th scope="col">Contact Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="~/media/logo/@item.LogoImage" width="30%" height="30%" /></td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                    <div id="map">
                        <iframe src="@item.Map"
                                width="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Contact" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-warning btn-sm" confirmDeletion" asp-action="Delete" asp-controller="Contact" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paging" model="@pager" />