@using WebsiteQuanLyBanHangOnline.Repository
@model IEnumerable<ContactModel>
@{
    ViewData["title"] = "Danh Sách Liên Hệ";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}

<div class="">
<p><a asp-controller="Contact" asp-action="Add" class="btn btn-warning btn-sm">Thêm Liên Hệ</a></p>
<table class="table table-bordered table-hover" id="myTable">
    <thead>
        <tr>
            <th scope ="col">Id</th>
            <th scope="col">Tên Liên Hệ</th>
            <th scope="col">Ảnh</th>
            @* <th scope="col">Mô Tả</th> *@
            <th scope="col">Địa Chỉ</th>
            <th scope="col">Email</th>
            <th scope="col">Số Điện Thoại</th>
            <th scope="col">Địa Chỉ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="~/media/logo/@item.LogoImage" width="30%" height="30%" /></td>
                @* <td>@Html.Raw(@item.Description)</td> *@
                <td>
                    <div id="map">
                        <iframe src="@item.Map"
                                width="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Contact" asp-route-Id="@item.Id">Sửa</a>
                    @* <a class="btn btn-warning btn-sm" confirmDeletion" asp-action="Delete" asp-controller="Contact" asp-route-Id="@item.Id">Xoá</a> *@
                </td>
                <td>
                    @* <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Contact" asp-route-Id="@item.Id">Sửa</a> *@
                    <a class="btn btn-warning btn-sm" confirmDeletion" asp-action="Delete" asp-controller="Contact" asp-route-Id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paging" model="@pager" />
</div>