@model ContactModel
@{
    ViewData["Title"] = "Thêm Liên Hệ";
}

<div class="container">
<form asp-action="Add" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Tên Liên Hệ</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Ảnh</label>
        <input asp-for="ImageUpload" class="form-control" />
        <span asp-validation-for="ImageUpload" class="text-danger" />
        <img id="imgpreview" class="pt-2" />
    </div>

    <div class="form-group">
        <label>Mô Tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Địa Chỉ</label>
        <textarea asp-for="Map" class="form-control"></textarea>
        <span asp-validation-for="Map" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số Điện Thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Địa Chỉ</label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button class="btn btn-warning btn-sm">Thêm</button>
        <a asp-action="Index" asp-controller="Contact" class="btn btn-warning btn-sm">Quay Lại</a>
    </div>
</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        CKEDITOR.replace('Description');
    </script>
    <script>
        $("#ImageUpload").change(function(){
            readURL(this);
        });
    </script>
}
