@using WebsiteQuanLyBanHangOnline.Models.ViewModels
@model IEnumerable<OrderDetailViewModel>
@{
    ViewData["Title"] = "Order Detail List";
    decimal subTotal = 0;
    decimal totalAmount = 0;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">User Name</th>
            <th scope="col">Product Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            subTotal = item.Price * item.Quantity;
            totalAmount += subTotal; 
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.ProductId</td>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>   
                <td>@subTotal</td>              
            </tr>
        }
        <tr>
            <td>Total Amount: @totalAmount</td>
        </tr>       
        <a asp-controller="Order" asp-action="Index" class="btn btn-primary btn-sm">Back</a>
    </tbody>
</table>