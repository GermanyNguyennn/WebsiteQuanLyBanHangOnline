@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Order List";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">User Name</th>
            <th scope="col">Created Date</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>
                @* <td>@item.Status</td> *@
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển Thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-controller="Order" asp-action="View" asp-route-OrderCode="@item.OrderCode" class="btn btn-primary btn-sm">View</a>
                    <a asp-controller="Order" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-primary btn-sm confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>