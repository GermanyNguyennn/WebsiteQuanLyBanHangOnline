@model AppUserModel
@{
    ViewData["Title"] = "Sửa Tài Khoản";
}

<div class="container">
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Tài Khoản</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Mật Khẩu</label>
        <input asp-for="PasswordHash" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số Điện Thoại</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Vai Trò</label>
        <select name="selectedRoleId" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>

    <div class="form-group">
        <button class="btn btn-warning btn-sm">Sửa</button>
        <a asp-action="Index" asp-controller="User" class="btn btn-warning btn-sm">Quay Lại</a>
    </div>
</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}