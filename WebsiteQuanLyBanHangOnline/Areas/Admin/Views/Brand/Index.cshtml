@model IEnumerable<BrandModel>
@{
    ViewData["Title"] = "Brand List";
}
<a asp-controller="Brand" asp-action="Add" class="btn btn-primary btn-sm">Add Brand</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Description</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Brand Status</th>
            <th scope="col">Brand Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển Thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-controller="Brand" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="Brand" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-primary btn-sm confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
